package com.project;

import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		ThreadSrt srttd = new ThreadSrt();
		srttd.start();
		Scanner sc = new Scanner(System.in);
		Covid pc = new Covid();
		Vaccine pv = new Vaccine();
		

	
		int ch;

		while (true) {
			do {
				System.out.println("1.누적현황 2.일일현황 3.실시간 백신현황 4.종료");
				ch = sc.nextInt();

			} while (ch < 1);

			switch (ch) {
			case 1:
				
				pc.covid();
				pc.today();
				break;
				
		case 2:
				
				pc.covid();
				pc.yesterday();
				break;	
			case 3:
				pv.vaccine();
				break;
				default:
					System.out.println("프로그램이 종료되었습니다.");
					System.exit(0);
			}
		}

	}

}
