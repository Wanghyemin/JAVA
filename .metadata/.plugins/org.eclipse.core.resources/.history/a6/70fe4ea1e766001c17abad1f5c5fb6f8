package com.day3;

public class Q1 {

	public static void main(String[] args) {

		/*
		 * 1에서 100까지 수의 홀수의 합, 짝수의 합, 전체의 합 짝수합 : 2550 홀수합 : 2500 합 : 5050
		 */

		int sum1, sum2, sum3;

		sum1 = 0;
		for (int i = 1; i <= 100; i += 2) {
			sum1 += i;
		}
		sum2 = 0;
		for (int i = 0; i <= 100; i += 2) {
			sum2 += i;
		}
		sum3 = 0;
		for (int i = 1; i <= 100; i++) {
			sum3 += i;
		}

		System.out.printf("홀수합: %d, 짝수합: %d, 총합: %d", sum1, sum2, sum3);
		
		
		// 선생님 답안
		
		int n=0, s1, s2, s3;

		s1=s2=s3=0;
		while(n<100) {
			n++;
			if(n%2==0)
			   s1+=n;
			else
			   s2+=n;
			
			s3+=n;
		}

		System.out.println("짝수합 : "+s1);
		System.out.println("홀수합 : "+s2);
		System.out.println("합 : "+s3);
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		

	}

}
