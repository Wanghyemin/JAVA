package com.project;

public class ThreadSrt extends Thread {

	@Override
	public void run() {

		try {
			// COVID 19 그림 프린트
			String print =
					 "□□□□□□□□□□□□□□□□□□□□□□□□□□□□□□□□□□□□□□□□□□□□\r\n"
					+ "□□■■■□□■■■■■□■□□□□□■□■■■□■■■■□□□□□■□□□□■■■□□\r\n"
					+ "□■□□□■□■□□□■□■□□□□□■□□■□□■□□□■□□□■■□□□■□□□■□\r\n"
					+ "□■□□□□□■□□□■□■□□□□□■□□■□□■□□□■□□■□■□□□■□□□■□\r\n"
					+ "□■□□□□□■□□□■□■□□□□□■□□■□□■□□□■□□□□■□□□□■■■■□\r\n"
					+ "□■□□□□□■□□□■□□■□□□■□□□■□□■□□□■□□□□■□□□□□□□■□\r\n"
					+ "□■□□□■□■□□□■□□□■□■□□□□■□□■□□□■□□□□■□□□■□□□■□\r\n"
					+ "□□■■■□□■■■■■□□□□■□□□□■■■□■■■■□□□■■■■■□□■■■□□\r\n"
					+ "□□□□□□□□□□□□□□□□□□□□□□□□□□□□□□□□□□□□□□□□□□□□\r\n";

			System.out.println(print);
			sleep(500);

			
			// COVID 19 그림 반전 프린트
			String xprint = "";
			for (int i = 0; i < print.length(); i++) {

				String str = print.substring(i, i + 1);
				if (str.equals("■")) {
					str = "□";
				} else if (str.equals("□")) {
					str = "■";
				}
				
				xprint += str;
			}

			System.out.println(xprint);

			sleep(500);

		} catch (Exception e) {

		}

	}
}
