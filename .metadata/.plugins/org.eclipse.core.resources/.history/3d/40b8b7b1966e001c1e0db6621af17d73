package com.study;

import java.util.Scanner;

public class ScoreAA {

	Scanner sc = new Scanner(System.in);
	public int inwon;
	public int[] score;
	public String[] name;

	public void set() {

		do {
			System.out.println("인원?");
			inwon = sc.nextInt();
		} while (inwon < 1 || inwon > 10);

		for (int i = 0; i < inwon; i++) {

			System.out.println("이름?");
			name[i] = sc.next();

			System.out.println("점수");
			score[i] = sc.nextInt();

		}
	}

	public void input() {

		for (int i = 0; i < score.length - 1; i++) {

			for (int j = i + 1; i < score.length; j++) {

				if (score[i] > score[j]) {

					score[i] = score[i] ^ score[j];
					score[j] = score[i] ^ score[j];
					score[i] = score[i] ^ score[j];

					String temp;
					temp = name[i];
					name[i] = name[j];
					name[j] = temp;
				}

			}
		}

	}
	
	public void print() {
		
		for (int i = 0; i < score.length - 1; i++) {
		System.out.printf("%s %s %d %d");
		
		System.out.println();
	}

}

public class Jan6 {

	public static void main(String[] args) {

	}

}
