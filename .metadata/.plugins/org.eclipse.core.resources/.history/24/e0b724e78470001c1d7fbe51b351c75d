package com.day5;

import java.util.Scanner;

public class Test11 {

	public static void main(String[] args) {

		// 10명 이내의 이름과 점수를 입력받아 석차 구하기

		Scanner sc = new Scanner(System.in);

		String[] name = null;
		int[] score = null;
		int[] rank = null;
		int inwon;

		do {
			System.out.println("how many?");
			inwon = sc.nextInt();

		} while (inwon < 1 || inwon > 10);

		for (int i = 0; i < inwon; i++) {
			System.out.println("이름 점수?");
			name[i] = sc.next();
			score[i] = sc.nextInt();
		}

		for (int i = 0; i < inwon - 1; i++) {
			for (int j = i + 1; j < inwon; j++) {
				
				rank[i] = 1;
				
				if (score[i] < score[j]) {
					
					score[i]++;

				} else if (score[i] > score[j]) {

					score[j]++;
				}
			}
		}
		
		for (int i = 0; i < inwon; i++) {
		
		System.out.printf("%6s : %4d [%2d]",name[i],score[i],rank[i]);
		}
	}

}
