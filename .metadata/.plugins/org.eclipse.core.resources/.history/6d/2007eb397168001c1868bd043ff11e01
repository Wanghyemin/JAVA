package com.score1;

import java.util.Scanner;

public class Score {

   int inwon;
   Record[] rec;

   Scanner sc = new Scanner(System.in);

   public void set() {

      do {
         System.out.print("인원수?");// 3
         inwon = sc.nextInt();
      } while (inwon < 1 || inwon > 1);

      rec = new Record[inwon];

   }

   public void input() {

      String[] title = { "국어?", "영어?", "수학?" };

      for (int i = 0; i < inwon; i++) {

         rec[i] = new Record();

         System.out.print("이름?");// suzi
         rec[i].name = sc.next();

         for (int j = 0; j < 3; j++) {

            System.out.print(title[j]);
            rec[i].score[j] = sc.nextInt();

            rec[i].tot += rec[i].score[j];

         }

         rec[i].ave = rec[i].tot / 3;

      }

   }

   public void print() {
      for (int i = 0; i < inwon; i++) {

         System.out.printf("%6s", rec[i].name);
         for (int j = 0; j < 3; j++) {
            System.out.printf("%4d", rec[i].score[j]);
         }

         System.out.printf("%4d", rec[i].tot);
         System.out.printf("%4d", rec[i].ave);
         System.out.printf("%4d\n", rec[i].rank);

      }
   }

}