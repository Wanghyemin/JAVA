package com.score1;

import java.util.Scanner;

public class Health {

	int inwon;
	Record1[] rec1;

	Scanner sc = new Scanner(System.in);

	public void set() {

		do {
			System.out.print("인원수?");
			inwon = sc.nextInt();
		} while (inwon < 1 || inwon > 50);

		rec1 = new Record1[inwon];
	}

	public void input() {

		String[] title = { "키", "몸무게" };

		for (int i = 0; i < inwon; i++) {

			rec1 = new Record1[i];

			System.out.print("이름?");
			rec1[i].name = sc.next();

			for (int j = 0; j < 2; j++) {

				System.out.println(title[j]);
				rec1[i].b[j] = sc.nextInt();

			}

		}

	}

	private void bmi() {
		
		rec1[i].bmi = rec1[i].b[1]/rec1[i].b[0]*rec1[i].b[0];
	}
	
	
	
	
	
}
