package com.rank;

import java.util.Scanner;

class Record {

	String name;
	int[] score;
	String[] score1;
	int tot, ave;
}

class Score {

	Scanner sc = new Scanner(System.in);
	Record[] re = new Record();
	int inwon, i, j;

	public void set() {

		do {
			System.out.println("인원을 입력하세요.");
			inwon = sc.nextInt();
		} while (inwon < 1 || inwon > 10);
		re = new Record[inwon];
	}

	public void input() {

		String[] title = { "국어", "영어", "수학" };

		for (i = 0; i < inwon; i++) {

			re[i] = new Record();

			System.out.println("이름을 입력하세요");
			re[i].name = sc.next();

			for (j = 0; j < 3; j++) {
				
				System.out.println(title[j]);
				
				re[i].score[j] = sc.nextInt();
				re[i].tot += re[i].tot / 3;

			}

			re[i].ave = re[i].tot / 3;

		}

	}

	private void ranking() {
		
		for( i = 0; i<inwon;i++) {
			for(j=0;j<3;j++) {
				
			
				if(re[i].score[j]>90) {
					re[i].score1[j] = "수";
				}else if(re[i].score[j]>80) {
					re[i].score1[j] = "우";
				}else if(re[i].score[j]>70) {
					re[i].score1[j] = "미";
				}else if(re[i].score[j]>60) {
					re[i].score1[j] = "양";
				}else {
					re[i].score1[j] = "가";
				
			
		}
			
		}

		
		
		

		
		
		
		
		
		
		
	}
	
	
	
	
	
	
	
	

public class ScoreMain {

	public static void main(String[] args) {

	}

}
