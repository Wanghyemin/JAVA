package com.day3;

import java.util.Scanner;

public class Test1 {

	public static void main(String[] args) {

		// 반복문(for, while, do~while)

		Scanner sc = new Scanner(System.in);

		int dan;

		System.out.print("단 입력?");// 7
		dan = sc.nextInt();

		
		// for문
		for (int i = 1; i <= 9; i++) {
			System.out.println(dan + "*" + i + "=" + (dan * i));
		}
		
		
		System.out.println("-------------------------");
		
		
		// while문
		int j=1;
		while(j<=9) {
			System.out.println(dan + "*" + j + "=" + (dan * j));
			j++;
		}
		
		
		
		
		
		
		
		
		
		
		
		
		
		
	}

}
