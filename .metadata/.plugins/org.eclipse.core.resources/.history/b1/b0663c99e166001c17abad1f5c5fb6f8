package com.day4;

import java.util.Random;

public class Test5 {

	public static void main(String[] args) {

		// 1~45까지의 수 중에서 6개의 난수(Random)를 발생시켜 크기 순으로 정렬

		Random rd = new Random();
		int[] num = new int[6];
		int i, j, n, temp;

		n = 0;

		while (n < 6) {
			num[n] = rd.nextInt(45) + 1;
			n++;
		}

		for (int su : num) {
			System.out.printf("%4d", su);

		}
	}

}
