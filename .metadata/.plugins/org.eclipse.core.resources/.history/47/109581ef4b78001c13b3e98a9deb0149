package com.project;

import java.util.Scanner;

public class ProjectMain {

	public static void main(String[] args) {
		ProjectThreadSrt srttd = new ProjectThreadSrt();
		srttd.start();
		Scanner sc = new Scanner(System.in);
		ProjectAPI pt = new ProjectAPI();

	
		int ch;

		while (true) {
			do {
				System.out.println("1.누적현황 2.일일현황 3.실시간 백신현황 4.종료");
				ch = sc.nextInt();

			} while (ch < 1);

			switch (ch) {
			case 1:
				pt.covid();
				break;
				default:
					System.out.println("프로그램이 종료되었습니다.");
					System.exit(0);
			}
		}

	}

}
