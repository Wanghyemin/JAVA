package com.day4;

import java.util.Scanner;

public class Test1 {

	public static void main(String[] args) {

		// 만년 달력: 배열

		Scanner sc = new Scanner(System.in);

		// 월별 날짜 수를 배열에 저장
		int[] months = { 31, 28, 31, 30, 31, 30, 31, 31, 30, 31, 30, 31 };

		int y, m, nalsu, i, week;

		do {
			System.out.print("년도?");
			y = sc.nextInt();
		} while (y < 1);

		do {
			System.out.println("월?");
			m = sc.nextInt();
		} while (m < 1 && m > 12);

	}
}
