package com.day7;

class Circle {

	private int r; // 정보의 은닉화 (캡슐화)

	public void setData(int a) {// 값을 넣을때 쓰는 method
		r = a;
	}

	public double area() {
		return r * r * 3.14;
	}

	public void result(double a) {
		System.out.println("반지름: " + r);
		System.out.println("넓이: " + a);

	}

}

public class Test1 {

	public static void main(String[] args) {

		Circle ob = new Circle();
		
		ob.setData(10);
		double a = ob.area();
		ob.result(a);
		
		ob.setData(100);
		a = ob.area();
		ob.result(a);
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
	}

}
