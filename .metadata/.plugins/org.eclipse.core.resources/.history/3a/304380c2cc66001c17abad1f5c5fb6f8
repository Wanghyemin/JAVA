package com.day4;

import java.util.Scanner;

public class Test2 {

	public static void main(String[] args) {

		//년,월,일
		//2021년 12월 27일 월요일
		
		Scanner sc = new Scanner(System.in);
		
		int[] months = { 31, 28, 31, 30, 31, 30, 31, 31, 30, 31, 30, 31 };
		int y,m,d,nalsu,week;
		
		do {
			System.out.print("년도?");
			y = sc.nextInt();
		} while (y < 1);

		do {
			System.out.print("월?");
			m = sc.nextInt();
		} while (m < 1 || m > 12);

		do {
			System.out.print("일?");
			d = sc.nextInt();
		} while (d < 1 || d > months[m-1]);

		
		
		
		
		
		
		
	}

}
