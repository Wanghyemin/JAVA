package com.day2;

import java.util.Scanner;

public class Q6 {

	public static void main(String[] args) {

		Scanner sc = new Scanner(System.in);
		
		int a,b,c,d;
		String name,str;
		
		System.out.print("이름?");
		System.out.print("3과목 점수?");
		name = sc.next();
		a = sc.nextInt();
		b = sc.nextInt();
		c = sc.nextInt();
		d = sc.nextInt();
		
		
		str = a>=40 && b>=40 && c>=40 && d>=180? "합격":"불합격";
		
		System.out.println("이름: "+ name);
		System.out.println("총점: "+ d +", 평균: " + d/3 + ", 판정: " + str);
	}

}
