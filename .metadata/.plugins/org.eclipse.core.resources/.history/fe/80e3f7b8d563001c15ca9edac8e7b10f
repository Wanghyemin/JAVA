package com.day2;

import java.util.Scanner;

public class Q6 {

	public static void main(String[] args) {

		Scanner sc = new Scanner(System.in);
		
		int a,b,c,d;
		String name,e;
		
		System.out.print("이름?");
		System.out.print("3과목 점수?");
		name = sc.next();
		a = sc.nextInt();
		b = sc.nextInt();
		c = sc.nextInt();
		d = sc.nextInt();
		
		d = a+b+c;
		
		if(a<40 || b<40 || c<40){
			e = "과락";
		}if else(d<180){
			e = "불합격";
		}else {
			e = "합격";
		}
	
		System.out.println("이름: " + name);
		System.out.println("총점: "+d+", 평균: " + d/3 + ", 판정: " + e );

}
