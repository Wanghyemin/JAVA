package com.day3;

import java.util.Scanner;

public class Test1 {

	public static void main(String[] args) {

		// 반복문(for, while, do~while)

		Scanner sc = new Scanner(System.in);

		int dan;

		System.out.print("단 입력?");// 7
		dan = sc.nextInt();

		
		// for문 (배열에 주로 사용)
		// 시작,끝,증가값 모두 알 때
		for (int i = 1; i <= 9; i++) {
			System.out.println(dan + "*" + i + "=" + (dan * i));
		}
		
		
		System.out.println("-------------------------");
		
		
		// while문 (시작점j=0이 일반적임) !!많이씀!!
		// while(T/F를 확인해서 {}안으로 보낼지 정함)
		// 데이터의 개수가 정해져있지 않을때 : 변동성이 있을 때
		int j=0;
		while(j<9) {
			j++;
			System.out.println(dan + "*" + j + "=" + (dan * j));
		}
		
		
		System.out.println("-------------------------");
		
		
		// do~while문 / 한 번은 실행한다={}안으로 무조건 들어온다
		// ex ) 나이를 먼저 물어보고 미성년자인지 확인하는 경우
		int k=0;
		do {
			k++;
			System.out.println(dan + "*" + k + "=" + (dan * k));
		}while(k<9);
		
		
		
		
		
		
		
		
		
		
	}

}
