package com.day15;

import java.util.Random;
import java.util.Scanner;

public class ClassRandom {

	private static String[] name = { "전상원", "박  범", "김찬주", "진현주", "남승은", "박가윤", "서동혁", "양세리", "김창훈", "이주현", "왕혜민",
			"이종원", "장하은", "김성제", "채현우", "이윤재", "전성덕", "이나영", "배승환", "이한솔" };

	private static int[] a;

	public void ClassRandom(String[] name) {
		this.name = name;
	}

	public void input() {

		Random rd = new Random();
		Scanner sc = new Scanner(System.in);

		int i, j, inwon, n;
		do {
			System.out.println("발표자 인원수?");

			inwon = sc.nextInt();

			a = new int[inwon];
		} while (inwon > 20 || inwon < 1);
		i = 0;
		while (i < inwon) {
			a[i] = rd.nextInt(20) + 1;
			for (j = 0; j < i; j++) {
				if (a[i] == a[j]) {
					i--;
					break;
				}
			}
			i++;
		}

	}

	
	public void print() {

		for (int i = 0; i < a.length; i++) {
			System.out.println("축하합니다!! 발표자입니다");
			System.out.printf("%d번 발표자 : %s \n", (i+1), name[a[i]]);
		}
	}

	public static void main(String[] args) {

		ClassRandom cr = new ClassRandom();
		cr.input();
		cr.print();

	}
}
