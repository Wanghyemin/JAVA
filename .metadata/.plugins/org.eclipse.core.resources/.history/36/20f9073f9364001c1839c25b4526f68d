package com.day3;

import java.util.Scanner;

public class Q1 {

	public static void main(String[] args) {
		
/*		1에서 100까지 수의 홀수의 합, 짝수의 합, 전체의 합
		짝수합 : 2550
		홀수합 : 2500
		합 : 5050*/
		
		Scanner sc = new Scanner(System.in);
		
		int sum1,sum2;
		
		for(int i =1; i<=100;i+=2 ) {
			sum1 = sum1 + i;
		}
		for(int i =0; i<=100;i+=2 ) {
			sum2 = sum2 + i;
		}
		
		System.out.print("짝수합: %d, 홀수합: %d, 합: %d");
		
		
		

	}

}
